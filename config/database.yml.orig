default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  username:
  password:
  database: cleanify_development

test:
  database: cleanify_test
  adapter: mysql2
  encoding: utf8
  username: root
  password: ''
  host: 127.0.0.1
  port: 3306

production:
  <<: *default
  database: cleanify_production
  username: cleanify
  password: <%= ENV['CLEANIFY_DATABASE_PASSWORD'] %>
